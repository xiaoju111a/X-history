{
  "manifest_version": 3,
  "name": "X History",
  "version": "1.0",
  "description": "保存浏览过的 X (Twitter) 推文历史记录",
  "permissions": ["storage"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X History"
  }
}
